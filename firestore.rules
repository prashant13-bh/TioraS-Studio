rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Strict Admin Check based on Email
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'ph293815@gmail.com' ||
        request.auth.token.email == 'tyoras9686@gmail.com' ||
        request.auth.token.email == 'dsmullam@gmail.com'
      );
    }

    // -------------------------------------------------------------------------
    // User Profiles (/users)
    // -------------------------------------------------------------------------

    match /users/{userId} {
      // Admins can read/write all users
      // Users can read/write their own profile
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); 
      allow create: if isOwner(userId) || isAdmin();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // -------------------------------------------------------------------------
    // Products (/products)
    // -------------------------------------------------------------------------

    match /products/{productId} {
      // Public read access
      allow read: if true;
      
      // Only Admins can write
      allow create, update, delete: if isAdmin();
    }

    // -------------------------------------------------------------------------
    // Stock Movements (/stockMovements)
    // -------------------------------------------------------------------------

    match /stockMovements/{movementId} {
      allow read: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    // -------------------------------------------------------------------------
    // Invoices (/invoices)
    // -------------------------------------------------------------------------

    match /invoices/{invoiceId} {
      allow read: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    // -------------------------------------------------------------------------
    // Addresses (/addresses)
    // -------------------------------------------------------------------------

    match /addresses/{addressId} {
      // Users can read/write their own addresses
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && (request.resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // -------------------------------------------------------------------------
    // Orders (/orders)
    // -------------------------------------------------------------------------

    match /orders/{orderId} {
      // Users can read their own orders, Admins can read all
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      // Users can create orders
      allow create: if isSignedIn() && (request.resource.data.userId == request.auth.uid || isAdmin());
      // Only Admins can update status (e.g. to 'Shipped'), Users can't modify after creation usually
      // But for now allow users to update if needed (e.g. cancel)
      allow update: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // -------------------------------------------------------------------------
    // Designs (/designs)
    // -------------------------------------------------------------------------

    match /designs/{designId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && (request.resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // -------------------------------------------------------------------------
    // Carts (/carts)
    // -------------------------------------------------------------------------

    match /carts/{cartId} {
      allow read, write: if isSignedIn() && (request.auth.uid == cartId || isAdmin());
    }

    // -------------------------------------------------------------------------
    // Wishlists (/wishlists)
    // -------------------------------------------------------------------------

    match /wishlists/{wishlistId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && (request.resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // -------------------------------------------------------------------------
    // Reviews (/reviews)
    // -------------------------------------------------------------------------

    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }
  }
}
