rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the currently authenticated user's UID matches the provided userId.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the user has the 'admin' role in their user profile.
     * This reads the user's document from the 'users' collection.
     */
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    /**
     * Checks if the resource's userId field matches the current user's UID.
     * Useful for top-level collections like orders and designs.
     */
    function isResourceOwner() {
      return isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // -------------------------------------------------------------------------
    // User Profiles (/users)
    // -------------------------------------------------------------------------

    match /users/{userId} {
      // Users can read their own profile. Admins can read all.
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); 
      
      // Users can create their own profile with matching ID.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      
      // Users can update their own profile (except role). Admins can update all.
      // Prevent users from promoting themselves to admin via update.
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin();
      
      // Only admins can delete users.
      allow delete: if isAdmin();
    }

    // -------------------------------------------------------------------------
    // Products (/products)
    // -------------------------------------------------------------------------

    match /products/{productId} {
      // Public read access.
      allow read: if true;
      
      // Admin-only write access.
      allow write: if isAdmin();
    }

    // -------------------------------------------------------------------------
    // Orders (/orders)
    // -------------------------------------------------------------------------

    match /orders/{orderId} {
      // Users can read their own orders. Admins can read all.
      allow get: if isResourceOwner() || isAdmin();
      allow list: if (isSignedIn() && request.query.limit <= 100 && resource.data.userId == request.auth.uid) || isAdmin();
      
      // Users can create orders if they assign it to themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Only admins can update orders (e.g., status changes).
      allow update: if isAdmin();
      
      // Only admins can delete orders.
      allow delete: if isAdmin();
    }

    // -------------------------------------------------------------------------
    // Designs (/designs)
    // -------------------------------------------------------------------------

    match /designs/{designId} {
      // Users can read their own designs. Admins can read all.
      allow get: if isResourceOwner() || isAdmin();
      allow list: if (isSignedIn() && request.query.limit <= 100 && resource.data.userId == request.auth.uid) || isAdmin();
      
      // Users can create designs if they assign it to themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own designs. Admins can update all.
      allow update: if isResourceOwner() || isAdmin();
      
      // Users can delete their own designs. Admins can delete all.
      allow delete: if isResourceOwner() || isAdmin();
    }

    // -------------------------------------------------------------------------
    // Carts (/carts)
    // -------------------------------------------------------------------------

    match /carts/{cartId} {
      // Users can read/write their own cart.
      // Assuming cartId is usually the userId, or the cart document has a userId field.
      // Here we assume cartId == userId for simplicity, or check userId field.
      allow read, write: if isOwner(cartId) || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    // -------------------------------------------------------------------------
    // Reviews (/reviews)
    // -------------------------------------------------------------------------

    match /reviews/{reviewId} {
      // Public read access.
      allow read: if true;
      
      // Authenticated users can create reviews.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Users can update/delete their own reviews. Admins can moderate.
      allow update, delete: if isResourceOwner() || isAdmin();
    }
    
    // -------------------------------------------------------------------------
    // Admin Roles Collection (Legacy/Backup)
    // -------------------------------------------------------------------------
    // Kept for backward compatibility if code still checks this, 
    // but primary role source is now the user document.
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
